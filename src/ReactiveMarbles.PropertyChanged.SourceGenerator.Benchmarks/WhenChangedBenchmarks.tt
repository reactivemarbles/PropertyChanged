                .WithInvocation(InvocationKind, ReceiverKind, x => <#= expression #>)
                .BuildSource();

            Compilation = CompilationUtil.CreateCompilation(userSource);
        }

        [Benchmark]
        [BenchmarkCategory("Change Depth <#= depth #>")]
